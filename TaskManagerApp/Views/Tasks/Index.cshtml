@model IEnumerable<TaskManagerApp.Models.TaskItem>

<h1>Task List</h1>

<p>
    <a href="@Url.Action("Create", "Tasks")" class="btn btn-primary">Create New Task</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@(task.IsCompleted ? "Yes" : "No")</td>
                <td>
                    <a href="@Url.Action("Edit", "Tasks", new { id = task.Id })" class="btn btn-secondary">Edit</a>
                    <a href="@Url.Action("Delete", "Tasks", new { id = task.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>